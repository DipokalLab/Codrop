  <script>
    let today = new Date();   

    let hours = today.getHours(); 
    let minutes = today.getMinutes();
    let seconds = today.getSeconds(); 

    let globalConfirmed = <%=globalConfirmed%>;
    let globalNewConfirmed = <%=globalNewConfirmed%>;
    let secUpdate = globalNewConfirmed/24/60/60;
    let minUpdate = secUpdate*60;
    let hourUpdate = secUpdate*60*60;
    let nowExpectation = globalConfirmed+(secUpdate*seconds)+(secUpdate*60*minutes)+(secUpdate*60*60*hours);

    console.log(nowExpectation);
    
    $("#globalsecUpdate").text("전 세계에서 1초에 약 "+secUpdate.toFixed(5)+"명이 확진판정을 받고 있습니다.");
    $("#globalminUpdate").text("1분에 약 "+minUpdate.toFixed(0)+"명");
    $("#globalhUpdate").text("1시간에 약 "+hourUpdate.toFixed(0)+"명");

    setInterval(function() { 
      nowExpectation = nowExpectation+secUpdate;
      $("#globalConfirmed").text(Math.floor(nowExpectation)+"명");
      
    }, 1000);

  </script>

